
.btn-logout {
	margin-top: 100rpx;
	width: 80%;
	border-radius: 50rpx;
	font-size: 16px;
	color: #fff;
	background: -webkit-linear-gradient(left, #365fff, #36bbff);
	background: linear-gradient(to right, #365fff, #36bbff);
}
.btn-logout-hover {
	background: -webkit-linear-gradient(left, #365fdd, #36bbfa);
	background: linear-gradient(to right, #365fdd, #36bbfa);
}
.input-name,
.input-password {
	height: 80rpx;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	position: relative;
	padding-left: 30rpx;
	box-sizing: border-box;
}
.input-name::after {
	content: " ";
	position: absolute;
	left: 30rpx;
	bottom: 0;
	right: 0;
	height: 1px;
	border-top: 1px solid #e5e5e5;
	-webkit-transform-origin: 0 0;
	        transform-origin: 0 0;
	-webkit-transform: scaleY(.5);
	        transform: scaleY(.5);
}
.input-name view,
.input-password view {
	width: 120rpx;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 28rpx;
	color: #333333;
}
.input-name input,
.input-password input {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 50rpx;
	line-height: 50rpx;
}

